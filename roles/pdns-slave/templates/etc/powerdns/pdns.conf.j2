allow-axfr-ips={{ allow_axfr_ips }}
allow-recursion=0.0.0.0

config-dir=/etc/powerdns

daemon=yes
disable-axfr=no
guardian=yes

local-address=0.0.0.0
local-port=53

master=yes
module-dir=/usr/lib/powerdns

setgid=pdns
setuid=pdns

socket-dir=/var/run
version-string=powerdns

include-dir=/etc/powerdns/pdns.d
